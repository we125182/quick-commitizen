{
  "name": "quick-commitizen",
  "version": "0.1.0",
  "description": "custome cli demo",
  "main": "index.js",
  "bin": {
    "quickcm": "./bin/quickcm.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "changelog": "npx conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "std-cm": "npx git-cz",
    "build": "webpack",
    "predeploy": "npm rum build",
    "deploy": "npm publish"
  },
  "keywords": [
    "cli"
  ],
  "author": "we125182",
  "license": "ISC",
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "commitizen": "^3.1.1",
    "conventional-changelog-cli": "^2.0.21",
    "husky": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
